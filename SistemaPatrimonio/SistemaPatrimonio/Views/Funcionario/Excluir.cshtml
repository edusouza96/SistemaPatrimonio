@model SistemaPatrimonio.Models.Funcionario

@{
    ViewBag.Title = "Excuir";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body">
            <h2>Deseja Realmente Excluir?</h2>
            <div>

                <hr />
                <dl class="dl-horizontal">

                    <!--nome do funcionario-->
                    <dt>
                        @Html.LabelFor(model => model.nomeFuncionario, "Nome Funcionario")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.nomeFuncionario)
                    </dd>

                    <!--telefone do funcionario-->
                    <dt>
                        @Html.LabelFor(model => model.telefoneFuncionario, "Telefone")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.telefoneFuncionario)
                    </dd>

                    <!--email do funcionario-->
                    <dt>
                        @Html.LabelFor(model => model.emailFuncionario, "Email")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.emailFuncionario)
                    </dd>

                </dl>

            </div>
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Sim" class="btn btn-default" />
                    <a href="@Url.Action("Index","Funcionario")" class="btn btn-default">Não</a>
                </div>
            }

        </div>
    </div>
</div>