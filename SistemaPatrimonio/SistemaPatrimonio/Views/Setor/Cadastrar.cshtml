@model SistemaPatrimonio.Models.Setor

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Patrimonio</h2> <!--Titulo de Entidade da Pagina-->

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cadastrar</h4> <!--Titulo de função da Pagina-->
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!--Linha nome di Setor-->
        <div class="form-group">
            @Html.LabelFor(model => model.nomeSetor,"Nome do Setor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomeSetor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomeSetor, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--Linha Localização do setor-->
        <div class="form-group">
            @Html.LabelFor(model => model.localizacaoSetor,"Localização Setor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.localizacaoSetor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.localizacaoSetor, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--Linha Botão Salvar-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<!--Linha Retornar-->
<div>
    @Html.ActionLink("Retornar", "Index")
</div>